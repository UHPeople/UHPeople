<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <div class="modal-title" id="myModalLabel">
    <h4>
    <% if current_user == @photo.user %>
      <%= form_tag({controller: "photos", action: "update"}, method: "patch", class: "form-inline") do %>
        <%= text_field_tag :image_text, @photo.image_text, class: "form-control" %>
        <%= submit_tag "Change title", class: "btn btn-default" %>
      <% end %>
    <% else %>
      <%= @photo.image_text %>
    <% end %>
    </h4>  
  </div>
</div>
<div class="modal-body">
  <div class="container-fluid">
    <div class="col-md-6">
      <div class="modal-image" style="background-image:url('<%= @photo.image.url(:original) %>')"></div>
    </div>

    <% if current_user == @photo.user %>
      <div class="col-md-2">
        <div class="form-group">
      <%= form_tag({controller: "users", action: "set_profile_picture"}, method: "post") do %>
        <%= hidden_field_tag :pic_id, @photo.id %>
        <%= submit_tag "Make default", class: 'btn btn-primary' %>
      <% end %>
      </div>
      <div class="form-group">
      <%= link_to 'Delete photo', photo_path(photo: @photo), method: :delete, class: 'btn btn-danger', "data-confirm": 'Are you sure you want to delete this photo?', "data-confirm-title": 'Delete photo' %>
      </div>
      </div>
    <% end %>
  </div>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>