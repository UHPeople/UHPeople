
<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix col-md-12">
  <div class="container col-md-12">
  <% unless @chats.any? %>
    <p class="lead">
      Your feed is empty. Follow some hashtags to see something here!
    </p>
  <% else %>
    <% @chats.each do |chat| %>
      <%= render 'chatbox', chat: chat %>
    <% end %>
  <% end %>
  </div>
</div>

