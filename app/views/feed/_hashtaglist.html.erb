<div>
	<h4> Groups</h4>
	<table class="table table-hover">
		<% user.hashtags.each do |tag| %>
			<tr>
				<td>
					<%= link_to "#"+tag.tag, tag %>
				</td>
				<td>
					<% if user == current_user %>
						<%= link_to leave_path(id: tag), method: :delete do %>
						<span class="glyphicon glyphicon-remove"/>
						<% end %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
</div>
