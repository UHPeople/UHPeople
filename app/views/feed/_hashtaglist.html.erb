<div class="col-md-3">
  <h2>Interests</h2>
  <table class="table table-hover">
    <% @tags_in_list.each do |tag| %>
        <tr>
          <td>
            <%= link_to "#"+tag.hashtag.tag, tag.hashtag %>
            <% if tag.favourite? %>
                <%= link_to "", {controller: "user_hashtags", action: "update", id: tag.id},
                            method: :put, class: "glyphicon glyphicon-star star" %>
            <% else %>
                <%= link_to "", {controller: "user_hashtags", action: "update", id: tag.id},
                            method: :put, class: "glyphicon glyphicon-star-empty star" %>
            <% end %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
