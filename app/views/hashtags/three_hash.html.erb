<div class="container">
  <div class="col-md-8">
    <h2>My favourite things</h2>

    <p>Find your favourite things or create new!</p>
    <%= form_tag({controller: "hashtags", action: "add"}, method: "patch") do %>
    <%= select_tag(:Hashtag, 
      options_for_select(
        Hashtag.all.collect {|h| [ h.tag, h.id] }),
          class: "list-hashtags",
          multiple: true)
        %>

      <%= submit_tag("Update") %>
    <% end %>
  </div>
</div>