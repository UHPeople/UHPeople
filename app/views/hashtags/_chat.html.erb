<div class="panel panel-default panel-chat">
  <div class="visible-xs toolbar pull-right">
    <%= render 'channel_buttons' %>
  </div>
  <div class="chatbox interest-chatbox">
    <% @messages.each do |message| %>
        <div class="panel-body">
          <a class="avatar-link" href="<%= user_path(message.user) %>">
            <%= image_tag message.user.profile_picture_url, class: "img-circle" %>
          </a>

          <div class="message">
            <h5>
              <%= link_to message.user.name, message.user %>
              <span class="timestamp"><%= message.timestamp %></span>
            </h5>
            <%= message.formatted_content %><br>

            <%= message.likes.count %>

            <div>
              <input id="message-id" type="hidden" value="<%= message.id %>"/>
                  <span class="input-group-btn">
                    <%= button_tag(type:'submit', class: 'btn btn-default btn-borderless ', id: 'like-this') do %>
                      <i class="material-icons md-10 icon-color send-hover">thumb_up</i>
                    <% end %>
                  </span>
            </div>

          </div>
        </div>
    <% end %>
  </div>

  <%= javascript_tag do %>
      var userdata = <%= raw @hashtag.users.to_json(only: [:name, :username]) %>;
      var hashtagdata = <%= raw Hashtag.all.map(&:tag).to_json %>;
  <% end %>

  <form>
    <div class="panel-footer input-group input-chat">
      <input  autocomplete="off" class="form-control mentions" id="input-text" placeholder="Write a message..." type="text"/>

      <input  id="hashtag-id" type="hidden" value="<%= @hashtag.id %>"/>
      <input  id="user-id" type="hidden" value="<%= current_user.id %>"/>

      <span class="input-group-btn">
        <%= button_tag(type:'submit', class: 'btn btn-default btn-borderless', id: 'chat-send') do %>
          <i class="material-icons md-30 icon-color send-hover">send</i>
        <% end %>
      </span>
    </div>
  </form>
</div>
<%= render 'invite' %>
<%= render 'edit' %>
