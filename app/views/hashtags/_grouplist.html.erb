<div class="grouplist-card mdl-card mdl-shadow--2dp" style="height: 70vh !important;">
  <div class="mdl-card__title mdl-card--border">
    <h2 class="mdl-card__title-text">Members</h2>
    <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect mdl-button--colored" id="new-interest-revealer">
      <i class="material-icons">add</i>
    </button>
  </div>
  <div class="mdl-card__supporting-text asd" style="width: 100% !important; margin: 0 !important; padding 0 !important;">
    <ul class="nav nav-list scrollable">
      <% @hashtag.users.each do |m| %>
        <li class='member-<%= m.id %>'><%= link_to m.name, m %></li>
      <% end %>
    </ul>
  </div>
  <div class="mdl-card__actions mdl-card--border mdl-color--grey-200" style="height: 48px !important;">
    <% if @user_has_tag %>
      <%= link_to 'Leave channel', leave_path(tag: @hashtag.tag), method: :delete, 'data-confirm': '', 'data-confirm-title': 'Leave Channel', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent leave-button' %>
      <%= link_to 'Invite', '#', class: 'mdl-button mdl-js-button mdl-js-ripple-effect', "data-toggle":'modal', "data-target":'#invite' %>
      <%= link_to 'Edit Channel' , '#', class: 'mdl-button mdl-js-button mdl-js-ripple-effect', "data-toggle":'modal', "data-target":'#edit' %>
    <% else %>
      <%= link_to 'Join', join_path(tag: @hashtag.tag), method: :post, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
