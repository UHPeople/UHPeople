<div class="bottom-sheet-overlay edit-card">
  <div class="bottom-sheet-card mdl-card mdl-shadow--6dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text mdl-color-text--white">Edit channel</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= form_for @hashtag, url: { tag: @hashtag.tag } do |f| %>
        <div class="modal-body edit-modal">
          <div class="form-group">
            <div>
              <%= f.label(:topic, 'Channel description')%>
              <%= f.text_area :topic, value: @hashtag.topic, class: 'form-control input-large', id: 'topic' %>
            </div>
            <div>
              <%= f.label(:photo_id, 'Background image')%>
              <button class="mdl-button mdl-js-button mdl-button--icon add-photo-modal__open">
                <i class="material-icons icon-color">insert_photo</i>
              </button>
              <%= f.hidden_field :photo_id, value: '', id: 'cover_photo' %>
            </div>
          </div>

          <%= f.submit value: 'Update', class: 'mdl-button mdl-button--raised' %>
        </div>
      <% end %>
    </div>
    <div class="mdl-card__menu">
      <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect edit-modal__close">
        <i class="material-icons">close</i>
      </button>
    </div>
  </div>
</div>
