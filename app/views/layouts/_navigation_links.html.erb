<li class='hidden-xs hidden-sm'><%= link_to "Home", root_path, id:"feed-onboard-home" %></li>

<li>
	<a href="<%= notifications_path %>" class="notif-link feed-onboard-notif">
		<i class="material-icons md-18">notifications</i>
		<span class="notif-count">
			<% if current_user.unread_notifications? %>
				<span class="badge badge-success">
					<%= current_user.notifications.unread_count  %>
				</span>
			<% end %>
		</span>
	</a>
</li>

<li class="dropdown">
  <a href="#" class="dropdown-toggle hidden-xs" data-toggle="dropdown" role="button" aria-expanded="false">
    	<%= current_user.name.partition(" ").first %>
    	<span class="caret"></span>
  </a>

	<%= link_to 'more_vert', "#", class:"material-icons md-36 dropdown-toggle visible-xs more_vert", "data-toggle":"dropdown" %>

  <ul id="non-transparent" class="dropdown-menu" role="menu">
    <li><%= link_to 'Profile' , current_user %></li>

    <% unless current_user.first_time %>
      <li><%= link_to "Start tour", first_time_path('true'), method: 'POST' %></li>
    <% end %>

    <li><%= link_to "Invite", "/invite" %></li>
    <li><%= link_to "About", "/about" %></li>
    <li><%= link_to "Logout", "/logout" %></li>
  </ul>
</li>
