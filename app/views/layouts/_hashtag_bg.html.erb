<div class="hashtag_bg hashtag-color--<%= @hashtag.color %>"
    style="
    <% if @hashtag.cover_photo.present? %>
      background: url(<%= @hashtag.cover_photo.url %>) no-repeat center center;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      -ms-background-size: cover;
      background-size: cover;
      -webkit-filter: brightness(75%);
      -moz-filter: brightness(75%);
      -o-filter: brightness(75%);
      -ms-filter: brightness(75%);
      filter: brightness(75%);
    <% end %>
    z-index: -100;">
  <% unless @user_has_tag %>
    <%= link_to join_path(tag: @hashtag.tag), method: :post, class: 'channel-join-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored' do %>
      <i class="material-icons">add</i>
    <% end %>
  <% end %>
</div>
