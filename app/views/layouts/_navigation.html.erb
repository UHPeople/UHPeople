<div class="mdl-layout__header-row">
  <div id="feed-onboard-header">
    <%= link_to image_tag('helsinki53x50.png', height: '32', width: '32'), root_path %>
  </div>

  <div class="mdl-layout--large-screen-only">
    <%= link_to 'UHPeople', root_path, class: 'mdl-navigation__link logo-font' %>
  </div>

  <div class="mdl-navbar">
    <%= form_tag search_index_path, method: 'get', role: 'search' do %>
      <div id="feed-onboard-search" data-toggle="tooltip" data-placement="bottom" title="Start typing names of users or tags here to search. If your tag does not exist, you'll be offered to add a new one.">
      </div>
      <div class="mdl-textfield mdl-js-textfield">
        <%= text_field_tag :search, '', placeholder: 'Search', class: "mdl-textfield__input typeahead", id: 'search', style: 'background-color: inherit !important;' %>
      </div>
      <div style="width: 0; height: 0; overflow: hidden;">
        <%= submit_tag "Search", name: nil %>
      </div>
    <% end %>
  </div>

  <div class="mdl-layout-spacer"></div>

  <nav class="mdl-navigation">
    <%= render 'layouts/navigation_links' %>
  </nav>
</div>

<% if current_page?(feed_index_path) %>
  <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--cyan-600">
    <a href="#favourites" class="mdl-layout__tab is-active" id="feed-onboard-favourites" target="1">Favourites</a>
    <a href="#feed" class="mdl-layout__tab" id="feed-onboard-feed" target="2">Feed</a>
    <a href="#limputtaja" class="mdl-layout__tab" target="3">Limputuskisa</a>
  </div>
<% end %>

<% if controller_name == "hashtags" && action_name == "show"  %>
  <div class="mdl-layout__header-row mdl-hashtag-topic">
    <span>#<%= @hashtag.tag if @hashtag %>
      <% if @hashtag && !@hashtag.topic.nil? && !@hashtag.topic.blank? %>
        <span class="material-icons title-separator">chevron_right</span>
        <%= auto_link(ERB::Util.html_escape(@hashtag.topic), html: { target: '_blank' }) if @hashtag %><br>
        <span class="hashtag_topicker">
          Updated by <b><%= @topicker.name if @topicker %></b> on
          <span class="timestamp" data-timestamp="<%= @hashtag.updated_at.strftime('%Y-%m-%dT%H:%M:%S') if @hashtag %>"></span>
        </span>
      <% end %>
    </span>

    <div class="mdl-layout-spacer"></div>

    <nav class="mdl-navigation">
      <a class="open-card mdl-navigation__link" href="#">Members</a>
       <% if @user_has_tag %>
         <%= link_to 'Invite', '#', class: 'mdl-navigation__link', "data-toggle":'modal', "data-target":'#invite' %>
         <%= link_to 'Edit Channel' , '#', class: 'mdl-navigation__link', "data-toggle":'modal', "data-target":'#edit' %>
         <%= link_to 'Leave channel', leave_path(tag: @hashtag.tag), class: 'mdl-navigation__link leave-button',  method: :delete, 'data-confirm': '', 'data-confirm-title': 'Leave Channel' %>
       <% end %>
    </nav>
  </div>
<% end %>
