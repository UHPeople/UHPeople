<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="col-md-3 col-sm-1 col-xs-2">
      <div class="navbar-brand">
        <%= link_to image_tag('helsinki53x50.png'), root_path %>
      </div>
      <div class="hidden-xs hidden-sm visible-lg-block">
        <%= link_to 'UHPeople', root_path, class: 'navbar-brand'  %>
      </div>
    </div>

    <% unless current_user.nil? %>


      <div class="col-md-5 col-sm-5 col-xs-4 small-right">
        <%= form_tag search_index_path, method: 'get', class: 'navbar-form' do %>
          <div class="form-group" style="display:inline; width: 100%;">
            <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control typeahead" %>

            <div style="width: 0; height: 0; overflow: hidden;" class="hidden">
              <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-3 col-sm-5 col-xs-6 small-left pull-right">
        <ul class="nav navbar-nav">
          <%= render 'layouts/navigation_links' %>
        </ul>
      </div>
    <% end %>
  </div>
</nav>