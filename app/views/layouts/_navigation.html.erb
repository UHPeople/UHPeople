<div class="mdl-layout__header-row  <%= 'mdl-color--cyan-600' unless controller_name == "hashtags" %>">

  <div id="feed-onboard-header">
    <%= link_to image_tag('helsinki53x50.png', height: '32', width: '32'), root_path %>
  </div>

  <div class="mdl-layout--large-screen-only">
    <%= link_to 'UHPeople', root_path, class: 'mdl-navigation__link logo-font' %>
  </div>
  <%= form_tag search_index_path, method: 'get', class: 'col-md-5 col-sm-5 col-xs-8 navbar-f', role: 'search' do %>
    <div class="form-group" style="display:inline; width: 100%;" id="feed-onboard-search" data-toggle="tooltip" data-placement="bottom" title="Start typing names of users or tags here to search. If your tag does not exist, you'll be offered to add a new one.">
      <%= text_field_tag :search, '', placeholder: "Search", class: "form-control typeahead" %>

      <div style="width: 0; height: 0; overflow: hidden;">
        <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="mdl-layout-spacer"></div>

  <nav class="mdl-navigation">
    <%= render 'layouts/navigation_links' %>
  </nav>
</div>

<% if current_page?(feed_index_path) %>
  <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--cyan-600">
    <a href="#favourites" class="mdl-layout__tab is-active" id="feed-onboard-favourites" target="1">Favourites</a>
    <a href="#feed" class="mdl-layout__tab" id="feed-onboard-feed" target="2">Feed</a>
    <a href="#limputtaja" class="mdl-layout__tab" target="3">Limputuskisa</a>
  </div>
<% end %>

<% if controller_name == "hashtags" && action_name == "show"  %>
  <div class="mdl-layout__header-row mdl-hashtag-topic">
      <span>#<%= @hashtag.tag %>
        <% unless @hashtag.topic.nil? && @hashtag.topic.blank? %>
          <span class="material-icons title-separator">chevron_right</span>
          <%= auto_link(ERB::Util.html_escape(@hashtag.topic), html: { target: '_blank' }) %><br>
          <span class="hashtag_topicker"> Updated by <b><%= @topicker.name %></b> on <span class="timestamp"><%= @hashtag.updated_at.strftime('%Y-%m-%dT%H:%M:%S') %></span></span>
        <% end %>
      </span>
  </div>
<% end %>
