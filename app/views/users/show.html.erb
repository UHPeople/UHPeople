
<div class= "col-xs-6 col-sm-5 col-lg-3 col-md-4">
	<div class="well">
		<div class="profileCrop" style="background-image: url('<%= @user.profilePicture %>')"></div>
	</div>
</div>

<div class= "col-xs-6 col-sm-7 col-md-4">
	<h1><%= @user.name %></h1>
	<p><%=  @user.title %></p>
	<p><%=  @user.email %></p>
	<p><%=  @user.campus %>, <%=  @user.unit %></p>
</div>

<div class= "col-xs-6 col-sm-7 col-md-4">
	<div class="well sidebar-nav">
		<h3>Hashtags</h3>
    	<ul class="nav nav-list">
			<% @user.hashtags.each do |tag| %>
				<li><%= link_to "#"+tag.tag, "#" %></li>
			<% end %>
    	</ul>
	</div>
</div><!--/span-->

<div class= "col-xs-12 col-sm-12 col-md-8" >	
	<h1>About me</h1>
	<p><%= @user.about %></p>
</div>