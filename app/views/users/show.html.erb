<div class="container">

  <div class="col-sm-4 well">
    <div class="profileCrop" style="background-image: url('<%= @user_photo %>');"></div>

    <table class="table table-hover">
      <% @user.photos.each do |pic| %>
          <%= link_to image_tag(pic.image.url(:thumb)), photo_path(:id=>pic.id)%>
      <% end %>
    </table>

    <%= link_to "Add photos" , '#', class: 'lead btn btn-default', onclick: "$('#target').toggleClass('hidden'); $('.lead').toggleClass('hidden');" %>

    <div id="target" class="hidden">
      <%= render "photo_form" %>
    </div>
  </div>
  
<div class="col-sm-5">
  <div class="userinfo">
    <h1><%= @user.name %></h1>
    <p><%= @user.title %></p>
    <p><%= @user.email %></p>
    <p><%= @user.campus %><%= ", " + @user.unit unless @user.unit.blank? %></p>
  </div>

  <div class="aboutme">
    <% unless @user.about.blank? %>
        <h1>About me</h1>
        <p><%= @user.about %></p>
    <% end %>
  </div>
</div>

<%= render "hashtaglist", user: @user %>
</div> <!-- /container -->


