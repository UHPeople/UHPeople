<div class="col-md-3 col-lg-2 hashtaglist-position">
  <div class="text-center">
    <a class="btn btn-info btn-margin" role="button" data-toggle="collapse" href="#collapseList" aria-expanded="false" aria-controls="collapseList">
      You have <%= @same_tags.count %><br> 
      same <%= "interest".pluralize(@same_tags.count) %>!
    </a>
  </div>
  <div class="collapse" id="collapseList">
    <div class="well">
      <% @same_tags.each do |hashtag| %>
        <tr>
          <td>
            <%= link_to "#" + truncate(hashtag.tag, length: 17), hashtag_path(tag: hashtag.tag) %><br>
          </td>
        </tr>
      <% end %>
    </div>
  </div>
</div>