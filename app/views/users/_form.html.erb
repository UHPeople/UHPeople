<div class="container">
  <%= render 'users/profile_well' %>

  <div class="col-sm-5">
    <%= form_for @user, html: { :multipart => true } do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited changes from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field element-position">
          <h2><%= @user.name %></h2>

          <%= f.text_field :name, :class => "form-control" if !Rails.env.production?%>

        </div>
        <div class="field element-position">
          <%= f.label :title %><br>
          <%= f.text_field :title, :class => "form-control" %>
        </div>
        <div class="option_class element-position">
          <%= f.label :campus %><br>
          <%= f.select :campus, options_for_select(@campuses, f.object.campus), {include_blank: true} %>
        </div>
        <div class="field element-position">
          <%= f.label :unit %><br>
          <%= f.text_field :unit, :class => "form-control" %>
        </div>
        <div class="field element-position">
          <%= f.label :about %><br>
          <%= f.text_area :about, size: "60x8", :class => "form-control" %>
        </div>
        <div class="actions element-position">
          <%= f.button :Update,  :class => 'btn btn-primary' %>
        </div>

      <% if action == 'new' %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>