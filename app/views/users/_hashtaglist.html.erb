<% unless user.hashtags.empty? %>
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col ">
      <h3>Groups</h3>
    </div>
    <div class="mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet hashtaglist-position">
      <%= render 'same_intrests' if @user != current_user && @same_tags.count > 0 %>
      <% if user.six_most_active_channels.count > 0 %>
        <table class="table table-hover table-condensed">
          <thead>
            <tr class="info">
              <th>Most active</th>
            </tr>
          </thead>
          <% user.six_most_active_channels.each do |user_hashtag| %>
            <tr>
              <td>
                <%= link_to "#" + truncate(user_hashtag.hashtag.tag, length: 17), hashtag_path(tag: user_hashtag.hashtag.tag) %>
              </td>
            </tr>
          <% end %>
        </table>
       <% end %>
     </div>
     <div class="mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet hashtaglist-position">
       <% if user.unactive_channels.count > 0 %>
         <table class="table table-hover table-condensed">
          <thead>
            <tr class="active">
              <th>Other groups</th>
            </tr>
          </thead>
          <% user.unactive_channels.each do |user_hashtag| %>
            <tr>
              <td>
                <%= link_to "#" + truncate(user_hashtag.hashtag.tag, length: 17), hashtag_path(tag: user_hashtag.hashtag.tag) %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
<% end %>
