<% unless user.hashtags.empty? %>
  <div class="col-sm-3 col-lg-2 hashtaglist-position">
    <h2>Interests</h2>
      <table class="table table-hover">
        <% user.hashtags.each do |tag| %>
          <tr>
            <td>
              <%= link_to "#"+tag.tag, tag %>
            </td>
          </tr>
        <% end %>
     </table>
  </div>
<% end %>